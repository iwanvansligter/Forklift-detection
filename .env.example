# Environment Variables - Copy to .env and configure

# Application
APP_NAME="Forklift Detection System"
APP_VERSION="2.0.0"
ENVIRONMENT="production"  # development | staging | production

# API Configuration
API_HOST="0.0.0.0"
API_PORT="8000"
API_WORKERS="4"
API_RELOAD="false"

# Security
API_KEY_ENABLED="false"
API_KEYS="your-secret-api-key-here,another-key-here"
SECRET_KEY="change-this-to-a-random-secret-key"  # Generate with: openssl rand -hex 32
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Database - PostgreSQL
DATABASE_TYPE="postgresql"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="forklift_db"
DATABASE_USER="forklift_user"
DATABASE_PASSWORD="change_this_password"
DATABASE_POOL_SIZE="10"

# Database - SQLite (alternative)
# DATABASE_TYPE="sqlite"
# SQLITE_DB_PATH="data/database/forklift.db"

# Redis (optional, for caching)
REDIS_ENABLED="false"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Storage Paths
EVENTS_DIR="data/events"
KNOWLEDGE_DIR="data/knowledge"
LOGS_DIR="data/logs"
STREAMS_DIR="data/streams"
MODELS_DIR="models"

# Retention Policies (days)
EVENTS_RETENTION_DAYS="30"
KNOWLEDGE_RETENTION_DAYS="365"
LOGS_RETENTION_DAYS="7"

# Model Configuration
FORKLIFT_DETECTOR_PATH="models/forklift_detector_v1.pt"
PALLET_DETECTOR_PATH="models/pallet_detector_v1.pt"
LOAD_CLASSIFIER_PATH="models/load_classifier_v1.pt"
MODEL_DEVICE="cuda"  # cuda | cpu
USE_HALF_PRECISION="true"

# OCR
OCR_PROVIDER="easyocr"  # easyocr | paddleocr
OCR_LANGUAGES="en"
OCR_GPU="true"

# Detection Thresholds
FORKLIFT_CONFIDENCE="0.6"
CLASSIFICATION_CONFIDENCE="0.7"
OCR_CONFIDENCE="0.6"

# Event Creation
MIN_TRACK_DURATION="3.0"
COOLDOWN_SECONDS="30"
REQUIRE_STATE_TRANSITION="true"
SAVE_VIDEO_CLIPS="false"

# Streaming
STREAMING_METHOD="hls"  # hls | mjpeg
HLS_SEGMENT_DURATION="2"
MJPEG_QUALITY="85"
MJPEG_FPS="15"

# Performance
INFERENCE_FPS="10"
NUM_WORKERS="2"
BATCH_SIZE="1"
FRAME_BUFFER_SIZE="100"

# Monitoring
MONITORING_ENABLED="true"
METRICS_PORT="9090"
HEALTH_CHECK_INTERVAL="30"

# Logging
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT="json"  # json | text
LOG_TO_FILE="true"
LOG_TO_CONSOLE="true"

# Notifications (optional)
NOTIFICATIONS_ENABLED="false"
SLACK_WEBHOOK_URL=""
EMAIL_SMTP_HOST=""
EMAIL_SMTP_PORT="587"
EMAIL_FROM=""
EMAIL_TO=""

# Feature Flags
FEATURE_ZONES="true"
FEATURE_VIDEO_CLIPS="false"
FEATURE_ANALYTICS="true"
FEATURE_KNOWLEDGE_AUTO_IMPORT="true"

# External Services (optional)
# S3_BUCKET=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""
# S3_REGION="us-east-1"
